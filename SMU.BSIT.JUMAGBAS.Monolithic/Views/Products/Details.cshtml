@model Product
@{
	ViewData["Title"] = "Details";

}

<h3>Details</h3>
@if(Model != null)
{
	<p>ID: @Model.Id</p>
	<p>Name: @Model.Name</p>
	<p>Type: @Model.Type</p>
	<p>Manufacturer: @Model.Manufacturer</p>
}
else
{
	<strong>Product not found!</strong>
}
